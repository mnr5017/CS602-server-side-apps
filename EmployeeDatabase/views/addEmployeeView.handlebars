 <div class="table-responsive">
  <form method="post" action="/employees/add">
    <table class="table table-condensed">
      <tbody>
       <tr>
        <th width="200">Employee Id: </th>
        <td><input type="text" name="cnumber" required 
              placeholder="Enter Employee Id"></td>
       </tr>
       <tr>
         <th>First Name: </th>
         <td><input type="text" name="cfirst" required 
              placeholder="Enter first name"></td>
       </tr>
       <tr>
         <th>Last Name: </th>
         <td><input type="text" name="clast" size="40"
              placeholder="Enter last name"></td>
       </tr>
      </tbody>
      <tfooter>
        <tr>
          <td></td>
          <td>
           <input type="submit" value="Save" 
              class="btn btn-success">
           <input type="button" value="Cancel" 
              class="btn btn-danger" onclick="cancelAdd()">
          </td>
        </tr>
      </tfooter>
    </table>
  </form>
</div>
